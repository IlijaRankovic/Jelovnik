<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <TextView
        android:id="@+id/tv_naziv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_image"/>

    <TextView
        android:id="@+id/tv_opis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_image"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_naziv"/>

    <TextView
        android:id="@+id/tv_kalorijska_vrednost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_image"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tv_opis"/>

    <TextView
        android:id="@+id/tv_cena"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_opis"
        android:layout_alignParentRight="true"/>

    <Spinner
        android:id="@+id/sp_kategorija"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_image"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/tv_sastojak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sp_kategorija"
        android:layout_alignParentLeft="true"/>

</RelativeLayout>